{
  "manifest_version": 3,
  "name": "ChatGPT Conversations Manager",
  "version": "1.0.0",
  "description": "Easily manage your ChatGPT conversations with bulk selection and actions",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications"
  ],
  
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*"
  ],
  
  "background": {
    "service_worker": "src/background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://*.chatgpt.com/*"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "ChatGPT Conversations Manager",
    "default_icon": "icons/icon.svg"
  },
  
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/content.css",
        "icons/*"
      ],
      "matches": ["https://chatgpt.com/*", "https://*.chatgpt.com/*"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
